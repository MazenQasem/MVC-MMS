@using MMS2
@model DrugAllergyMdl
@{
    ViewBag.Title = "Drug Allergies";
    Layout = "~/Views/Shared/_TwitterLayoutPage.cshtml";
}
<script type='text/javascript' src="@Url.Content("~/Scripts/DrugAllergyJS.js")"></script>

<div class="breadCrumb clearfix">
    <ul id="breadcrumbs">
        <li><a href="@Url.Content("~/")">Home</a></li>
        <li><a href="#" onclick="$('#mainMenuDefault').trigger('click');">Main</a></li>
        <li>Drug Allergies</li>
    </ul>
</div>


<div class="content">
    <form id="validate">
        @using (Ajax.BeginForm("DrugAllergySave", new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "validate" }))
        { 
            
            <div class="widget Header">
                <div class="head dark">
                    <div class="icon"><span class=""></span></div>
                    <h2>Drug Allergies</h2>
                </div>
                @Html.Hidden("PIN")
                <div class="row-fluid">
                    <div class="block-fluid">
                        <div class="row-form">
                            <div class="span2">
                                <div class="span4">
                                    <span>.</span>
                                    <input type="text" id="gIACode" class="ViewTxtCSS" style="font-style: oblique" value="" />
                                </div>
                                <div class="span8">
                                    <span class="top">PIN#</span>
                                    <input type="text" id="PinNo" class="" value="" />
                                </div>
                            </div>
                            <div class="span2"></div>
                            <div class="span4">
                                <span class="top">Operator</span>
                                <input type="text" id="OperatorName" class="ViewTxtCSS" value="" />
                            </div>
                            <div class="span4">
                                <span class="top">DateTime</span>
                                <input type="text" id="DateTime" class="ViewTxtCSS" value="" />
                            </div>
                        </div>

                        <div class="row-form">
                            <div class="span8">
                                <span class="top">Name</span>
                                <input type="text" id="PTName" class="ViewTxtCSS" value="" />
                            </div>
                            <div class="span2">
                                <span class="top">Sex</span>
                                <input type="text" id="Sex" class="ViewTxtCSS" value="" />
                            </div>
                            <div class="span2">
                                <span class="top">Age</span>
                                <input type="text" id="Age" class="ViewTxtCSS" value="" />
                            </div>
                        </div>




                        <div class="row-form">
                            <div class="span2">
                                <span class="top">Allergy Type</span>
                                <select id="AllergyTypeList" class="select" style="width: 100%; word-break: break-all; text-overflow: inherit">
                                    <option value="0">select Type</option>
                                    <option value="1">Drug Allergy</option>
                                    <option value="2">Other Allergy</option>
                                </select>
                            </div>
                            <div class="span1"></div>
                            <div class="DrugAllergyDIV">
                                <div class="span8">
                                    <span class="top">Drug List</span>
                                    <input type="text" id="allItemsList" class="js-data-example-ajax" style="width: 100%" />
                                </div>
                                <div class="span1">
                                    <span class="top">.</span>
                                    <input type="button" class="button" id="btnAddItem" value="Add" />
                                </div>
                            </div>
                        </div>
                        <div class="dr"><span></span></div>
                        <div class="row-form">
                            <div class="DrugAllergyDIV">
                                <table class="table" id="SelectedDrugtbl"
                                    style="background-color: beige; width: 100%;">
                                    <thead>
                                        <tr>
                                            <th class="hidden">GenericID</th>
                                            <th>Generic Name </th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                            <div class="OtherAllergyDIV">
                                <textarea id="othertxt" name="description" style="width: 100%"></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row-fluid">
                    <div class="block-fluid">
                        <div class="row-form">
                            <div class="span12">
                                <div class="span6">
                                </div>
                                <div class="span2">
                                    <button class="btn btn-primary" id="btnSave" style="width: 75%">Save</button>
                                </div>

                                <div class="span2">
                                    <button class="btn btn-primary" id="btnPrint" style="width: 75%">Print</button>

                                </div>
                                <div class="span2">
                                    <button class="btn btn-primary" id="btnClear" style="width: 75%">Clear</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        }

        @*report Modal*@
        <div class="dialog-fluid" id="ReportDialog"
            style="display: none; background-color: rgba(72, 61, 139, 0.2);" title="Report">
            <div class="block-fluid">
                <div id="DivRpt" style="overflow: auto; max-height: 350px; overflow-x: auto"></div>
            </div>
        </div>
    </form>

</div>

