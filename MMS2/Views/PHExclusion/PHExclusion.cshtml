@using MMS2
@model PHExclusionModel

@{
    ViewBag.Title = "Pharmacy Exclusion";
    Layout = "~/Views/Shared/_TwitterLayoutPage.cshtml";
}
<script type='text/javascript' src="@Url.Content("~/Scripts/PHExclusion.js")"></script>

<div class="breadCrumb clearfix">
    <ul id="breadcrumbs">
        <li><a href="@Url.Content("~/")">Home</a></li>
        <li><a href="@Url.Content("~/")" onclick="$('#mainMenuDefault').trigger('click');">Main</a></li>
        <li>PH Exclusions</li>
    </ul>
</div>


<div class="content">
    <form id="validate">
        @using (Ajax.BeginForm("PHExclusionSave", new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "validate" }))
        { 
            <div class="widget">
                <div class="head dark">
                    <div class="icon"><span class=""></span></div>
                    <h2>@ViewBag.Title</h2>
                </div>

                <div class="row-fluid">
                    <div class="block-fluid">
                        <div class="row-form">
                            <div class="span2">
                                <span class="top">Patient Type</span>
                                <div class="btn-group" data-toggle="buttons-radio" id="PatientType">
                                    <button type="button" class="btn" value="1">IP</button>
                                    <button type="button" class="btn" value="0">OP</button>
                                </div>
                            </div>
                            <div class="span8">
                                <span class="top">Category</span>
                                <select id="CategoryList"></select>
                            </div>
                        </div>
                        <div class="row-form">
                            <div class="span2"></div>
                            <div class="span4">
                                <span class="top">Company</span>
                                <select id="CompanyList"></select>
                            </div>
                            <div class="span2">
                                <span class="top">Class</span>
                                <select id="ClassList"></select>
                            </div>
                            <div class="span2">
                                <span class="top">.</span>
                                <button id="Show" class="btn btn-primary" style="width: 75%">Show</button>
                            </div>
                        </div>
                        <div class="row-form">
                            <div class="span6">
                                <span class="top" style="font-size: x-large;">All Items</span>
                                <table class="table" id="AllItemtbl" style="background-color: beige; width: 100%;">
                                    <thead>
                                        <tr>
                                            <th class="hidden">ID</th>
                                            <th>Item</th>
                                            <th>Add</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                            <div class="span6">
                                <span class="top" style="font-size: x-large;">Selected Items</span>
                                <table class="table" id="SelectedItemtbl" style="background-color: azure; width: 100%;">
                                    <thead>
                                        <tr>
                                            <th class="hidden">ID</th>
                                            <th>Item</th>
                                            <th>Remove</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="row-fluid">
                    <div class="block-fluid">
                        <div class="row-form">
                            <div class="span12">
                                <div class="span6">
                                </div>
                                <div class="span3">
                                    <button class="btn btn-primary" id="btnSave" style="width: 75%">Save</button>
                                </div>
                                <div class="span3">
                                    <button class="btn btn-primary" id="btnClear" style="width: 75%">Clear</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        }
    </form>

</div>

