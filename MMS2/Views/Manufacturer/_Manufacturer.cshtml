@using MMS2
@model  ManufacturerS
@{
    
    Layout = "~/Views/Shared/_TwitterLayoutPage.cshtml";
     
    
    
}
<script type='text/javascript' src="@Url.Content("~/Scripts/Manufacturers.js")"></script>
<div class="breadCrumb clearfix">
    <ul id="breadcrumbs">
        <li><a href="@Url.Content("~/")">Home</a></li>
        <li><a href="#" onclick="$('#mainMenuDefault').trigger('click');">Main</a></li>
        <li>Manufacturer</li>
    </ul>
</div>



<div class="content">


    <form id="validate">

        @using (Ajax.BeginForm("Save", new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "validate" }))
        {
                
@*Headers*@
            <div class="row-fluid">
                <div class="span12">
                    <div class="widget">
                        <div class="head dark">
                            <div class="icon"><i class="icos-newtab"></i></div>
                            <h2>Manufacturer Master Data</h2>
                        </div>
                        <div class="block">
                            <div class="row-form">
                                <div class="span2">Manufacturer ID's  </div>
                                <div class="span6">
                                    @Html.DisplayFor(m => m.Manufacturerx.id)
                                    @Html.HiddenFor(m => m.Manufacturerx.id)
                                    @Html.HiddenFor(m => m.Manufacturerx.PaymentType)
                                    @Html.HiddenFor(m => m.Manufacturerx.Active)
                                </div>
                            </div>

                            <div class="row-form">
                                <div class="span2">Manufacturer Name  </div>
                                <div class="span6">
                                    @*@Html.TextBoxFor(m => m.Name, new {@palceholder="Name", @class="validate[required]"})*@
                                    @Html.TextBoxFor(m => m.Manufacturerx.Name, new { @class = "validate[required]" })
                                </div>

                                <div class="span1">DateTime</div>
                                <div class="span2">
                                    @*@Html.TextBoxFor(m => m.StartdateTime)*@
                                    @Html.DisplayFor(m => m.Manufacturerx.StartdateTime)
                                </div>
                            </div>
                            <div class="row-form">
                                <div class="span2">Contact Person </div>
                                <div class="span6">
                                    @Html.TextBoxFor(m => m.Manufacturerx.ContactPerson, new { @class = "validate[required]" })
                                </div>
                                <div class="span1">Grade  </div>
                                <div class="span2">
                                    @Html.TextBoxFor(m => m.Manufacturerx.Grade, new { @class = "validate[required]" })
                                </div>

                            </div>
                            <div class="row-form">
                                <div class="span2">Code  </div>
                                <div class="span6">
                                    @Html.TextBoxFor(m => m.Manufacturerx.Code, new { @class = "validate[required]" })
                                </div>
                                <div class="span1"></div>
                                <div class="span2">
                                    @*@Html.CheckBoxFor(Model.Manufacturerx.OverSeas)*@

                                    @Html.CheckBox("OverSeas", Model.Manufacturerx.OverSeas.Value)

                                    Overseas Supplier
                                </div>

                            </div>

                            <div class="row-form">
                                <div class="span2"></div>
                                <div class="span6">
                                </div>
                                <div class="span1"></div>
                                <div class="span2">
                                    <div class="btn-group" data-toggle="buttons-radio">
                                        @if (Model.Manufacturerx.Active == false)
                                        { 
                                            <button type="button" class="btn active" onclick="SetActiveValue()">Active</button>
                                            <button type="button" class="btn " onclick="SetNonActiveValue()">Deactive</button>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn ">Active</button>
                                            <button type="button" class="btn active">Deactive</button>
                                        }
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>

@*Details*@
            <div class="row-fluid">
                <div class="span12">
                    <div class="widget">
                        <div class="head dark">
                            <div class="icon"><i class="icosg-gridview"></i></div>
                            <h2>Other Information</h2>
                        </div>

                        <div class="block-fluid tabbable tabs-left">
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#tab1" data-toggle="tab">Office Detail</a></li>
                                <li class=""><a href="#tab2" data-toggle="tab" id="PaymentTypeLI">Payment Terms</a></li>
                                <li class=""><a href="#tab3" data-toggle="tab">Manufacturer Items</a></li>
                                <li class=""><a href="#tab4" data-toggle="tab">Sup.Manufacturer</a></li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="tab1">
                                    <div class="row-fluid">
                                        <div class="span2">Address1  </div>
                                        <div class="span4">@Html.TextBoxFor(m => m.Manufacturerx.Address1) </div>

                                    </div>

                                    <div class="row-fluid">
                                        <div class="span2">Address2  </div>
                                        <div class="span4">@Html.TextBoxFor(m => m.Manufacturerx.Address2) </div>

                                        <div class="span2">Cell Phone  </div>
                                        <div class="span4">@Html.TextBoxFor(m => m.Manufacturerx.Cell) </div>
                                    </div>

                                    <div class="row-fluid">
                                        <div class="span2">City  </div>
                                        <div class="span4">@Html.TextBoxFor(m => m.Manufacturerx.City) </div>

                                        <div class="span2">Fax  </div>
                                        <div class="span4">@Html.TextBoxFor(m => m.Manufacturerx.Fax) </div>
                                    </div>

                                    <div class="row-fluid">
                                        <div class="span2">Country  </div>
                                        <div class="span4">@Html.TextBoxFor(m => m.Manufacturerx.Country) </div>

                                        <div class="span2">E-Mail  </div>
                                        <div class="span4">
                                            @Html.TextBoxFor(m => m.Manufacturerx.Email, new { @placeholder = "Email", @class = "validate[required,email]" })
                                        </div>

                                    </div>

                                    <div class="row-fluid">
                                        <div class="span2">PO Box No. </div>
                                        <div class="span4">@Html.TextBoxFor(m => m.Manufacturerx.POBox) </div>

                                        <div class="span2">WebSite</div>
                                        <div class="span4">@Html.TextBoxFor(m => m.Manufacturerx.web_site) </div>
                                    </div>

                                    <div class="row-fluid">
                                        <div class="span2">Office Phone1 </div>
                                        <div class="span4">@Html.TextBoxFor(m => m.Manufacturerx.Phone1, new { @class = "validate[required]" }) </div>

                                        <div class="span2">Office Phone2  </div>
                                        <div class="span4">@Html.TextBoxFor(m => m.Manufacturerx.Phone2) </div>
                                    </div>


                                </div>
                                <div class="tab-pane" id="tab2">

                                    <div class="accordion ui-accordion ui-widget ui-helper-reset" role="tablist">
                                        <h3 tabindex="0" aria-selected="true" aria-controls="ui-accordion-2-panel-0"
                                            id="ui-accordion-2-header-0" role="tab"
                                            class="ui-accordion-header ui-helper-reset ui-state-default ui-accordion-icons ui-accordion-header-active ui-state-active ui-corner-top">
                                            <span class="ui-accordion-header-icon ui-icon ui-icon-triangle-1-s"></span>Select Payment Type</h3>
                                        <div aria-hidden="false" aria-expanded="true" role="tabpanel" aria-labelledby="ui-accordion-2-header-0"
                                            id="ui-accordion-2-panel-0" style="display: block;"
                                            class="ui-accordion-content ui-helper-reset ui-widget-content ui-corner-bottom ui-accordion-content-active">

                                            <div class="btn-group" data-toggle="buttons-radio">
                                                <button id="btnCash" type="button" class="btn active" onfocus="Show()" onclick="Show()">Cash On Delivery</button>
                                                <button id="btnPrePaid" type="button" class="btn" onfocus="Show()" onclick="Show()">PrePaid</button>
                                                <button id="btnDue" type="button" class="btn" onfocus="Show()" onclick="Show()">Due in Number of Days</button>

                                            </div>
                                        </div>

                                        <h3 tabindex="-1" aria-selected="false" aria-controls="ui-accordion-2-panel-1"
                                            id="ui-accordion-2-header-1" role="tab"
                                            class="ui-accordion-header ui-helper-reset ui-state-default ui-accordion-icons ui-corner-all">
                                            <span class="ui-accordion-header-icon ui-icon ui-icon-triangle-1-e"></span>

                                            <label id="lblPayment" name="lblPayment">Payment Details  </label>
                                        </h3>
                                        <div aria-hidden="true" aria-expanded="false" role="tabpanel" aria-labelledby="ui-accordion-2-header-1"
                                            id="ui-accordion-2-panel-1" style="display: none;"
                                            class="ui-accordion-content ui-helper-reset ui-widget-content ui-corner-bottom">
                                            <div id="btnCashON-dtl">
                                                <div class="row-fluid">
                                                    <div id="DueN1">
                                                        <div class="span2">Net Due In  </div>
                                                        <div class="span2">@Html.TextBoxFor(m => m.Manufacturerx.NetDueDays)</div>
                                                        <div class="span2">Days </div>
                                                    </div>
                                                    <div id="DueN2">
                                                        <div class="span2">Discount In  </div>
                                                        <div class="span2">@Html.TextBoxFor(m => m.Manufacturerx.DiscountDays) </div>
                                                        <div class="span2">Days </div>
                                                    </div>
                                                </div>
                                                <div class="row-fluid">
                                                    <div id="DueN3">
                                                        <div id="DiscountTitle" class="span2">Discount %  </div>
                                                        <div id="PrePaidTitle" class="span2">PrePaid %  </div>
                                                        <div class="span2">@Html.TextBoxFor(m => m.Manufacturerx.Percentage) </div>
                                                        <div class="span2"></div>
                                                    </div>
                                                    <div id="DueN4">
                                                        <div class="span2">Credit Limit  </div>
                                                        <div class="span2">@Html.TextBoxFor(m => m.Manufacturerx.CreditLimit) </div>
                                                        <div class="span2">Amount </div>
                                                    </div>
                                                </div>

                                            </div>

                                        </div>

                                    </div>

                                </div>
                                <div class="tab-pane" id="tab3">
                                    <div class="row-fluid">
                                        <div class="span6">
                                            * All Items (search By 4 Char)
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span5">
                                            @*@Html.ListBox("ItemList", new SelectList(Model.ItemList, "ID", "name", Model.ItemlistID), new { id = "ItemList" })*@

                                            <div>@Html.TextBox("txtSearch")</div>

                                            @Html.ListBox("ItemList", new SelectList(Model.ItemList, "ID", "name", Model.ItemlistID), new { id = "ItemList" })
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span3">
                                            * Selected Items 
                                        </div>
                                        <div class="span3">
                                            <input id="btnAdd" type="button" value=" Add " onclick="addItem();" style="width: 90px" />
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper" role="grid" style="height: 300px; overflow-y: scroll;">
                                            <table class="table table-hover dataTable" cellpadding="0" cellspacing="0" width="100%"
                                                id="DataTables_Table_0" style="width: 100%; overflow-y: scroll;">
                                                <thead>
                                                    <tr role="row">
                                                        <th width="25%" class="sorting" role="columnheader" tabindex="0" aria-controls="DataTables_Table_0"
                                                            rowspan="1" colspan="1"
                                                            aria-label="Name: activate to sort column ascending" style="width: 154px;">ItemID
                                                        </th>
                                                        <th width="20%" class="sorting"
                                                            role="columnheader" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1"
                                                            aria-label="Product: activate to sort column ascending" style="width: 120px;">Item Name</th>
                                                        <th width="20%" class="sorting" role="columnheader" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1"
                                                            colspan="1" aria-label="Status: activate to sort column ascending" style="width: 122px;">PartNo
                                                        </th>
                                                        <th width="15%" class="TAC sorting_disabled" role="columnheader" rowspan="1" colspan="1" aria-label="Actions"
                                                            style="width: 87px;">Actions

                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody role="alert" aria-live="polite" aria-relevant="all">
                                                    @if (Model.Manufacturerx.id != 0 && Model.SelectedManufacturerItems.Count > 0)
                                                    {
                                                        foreach (var RR in Model.SelectedManufacturerItems)
                                                        { 
                                                        <tr class="odd">
                                                            <td class=" "><a href="#">@RR.ItemID  </a></td>
                                                            <td class=" "><a href="#">@RR.ItemName</a></td>
                                                            <td class=" "><span class="display-mode">
                                                                <label id="lblPartNo">@RR.PartNo</label></span>
                                                                <input type="text" id="PartNo" value="" class="edit-mode hidden" />
                                                            </td>
                                                            <td class="TAC ">
                                                                <a href="#"><span class="icon-ok save-user edit-mode hidden"></span></a>
                                                                <a href="#"><span class="icon-pencil edit-user display-mode"></span></a>
                                                                <a href="#"><span class="icon-trash cancel-user edit-mode hidden"></span></a>
                                                            </td>
                                                        </tr>
                                                        }

                                                    }
                                                </tbody>

                                            </table>
                                        </div>
                                    </div>
                                </div>


                                <div class="tab-pane" id="tab4">
                                    <div class="row-fluid">
                                        <div class="span6">
                                            * All Suppliers
                                        </div>
                                        <div class="span4">
                                            * Selected Supplier
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span5">
                                            @Html.ListBox("SupplierList", new SelectList(Model.SupplierList, "ID", "name", Model.SupplierList), new { id = "SupplierList" })

                                        </div>
                                        <div class="span1">
                                            <div class="row-fluid">
                                                <div class="span1">
                                                    <input type="button" value=" > " onclick="addMan();" style="width: 60px" />
                                                </div>
                                            </div>
                                            <div class="row-fluid">
                                                <div class="span1">
                                                    <input type="button" value=" < " onclick="removeMan();" style="width: 60px" />
                                                </div>
                                            </div>
                                            <div class="row-fluid">
                                                <div class="span1">
                                                    <input type="button" value=" << " onclick="removeallMans();" style="width: 60px" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span5">
                                            @if (Model.Manufacturerx.id != 0 && Model.SelectedSupplier.Count > 0)
                                            {
                                                @Html.ListBoxFor(m => m.SelectedSupplier,
                                                new SelectList(Model.SelectedSupplier, "SupplierID", "name", Model.SelectedManSupID),
                                                new { id = "SelectedSupplier", MultiSelectList = true })
                                            }
                                            else
                                            { 
                                                @Html.ListBox("SelectedSupplier", Enumerable.Empty<SelectListItem>(), new { id = "SelectedSupplier" })
                                            }





                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>



            </div>

@*Commands*@
            <div class="row-fluid">
                <div class="span12">

                    <div class="block">



                        <div class="row-form" id="divCommand">
                            <input type="submit" name="BtnSave" id="BtnSave" class="btn btn-primary" value="Save" style="width: 90px; font-size: larger;" />
                            @if (Model.Manufacturerx.id > 0)
                            {
                                <input type="submit" name="BtnDelete" id="BtnDelete" class="btn btn-primary" value="Delete" style="width: 90px; font-size: larger;" />
                            }


                            <input type="submit" name="BtnClear" id="BtnClear" class="btn btn-primary" value="Clear" style="width: 90px; font-size: larger;" />

                            <input type="submit" name="BtnClose" id="BtnClose" class="btn btn-primary" value="Close" style="width: 90px; font-size: larger;" />
                        </div>
                    </div>

                </div>
            </div>
                
        }
    </form>
    @*html.BeginForm END  *@


</div>
