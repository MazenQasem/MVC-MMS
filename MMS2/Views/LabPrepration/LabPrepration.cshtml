@using MMS2
@model LabModel

@{
    ViewBag.Title = "Lab";
    Layout = "~/Views/Shared/_TwitterLayoutPage.cshtml";
}
<script type='text/javascript' src="@Url.Content("~/Scripts/LabPrepration.js")"></script>

<div class="breadCrumb clearfix">
    <ul id="breadcrumbs">
        <li><a href="@Url.Content("~/")">Home</a></li>
        <li><a href="#" onclick="$('#mainMenuLab').trigger('click');">Lab Prepration</a></li>
        <li>Preparation Definition </li>
    </ul>
</div>
@*<script>
    $(document).ready(function (e) {

        $('#mainMenuLab').trigger('click');
    });
</script>*@



<div class="content">
    <form id="validate">
        @using (Ajax.BeginForm("LabSave", new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "validate" }))
        { 
            <div class="widget">
                <div class="head dark">
                    <div class="icon"><span class=""></span></div>
                    <h2>Lab -Profile Definition</h2>
                </div>
                @Html.Hidden("ProfileId")
                @Html.Hidden("MaxID")
                <div class="row-fluid">
                    <div class="block-fluid">
                        <div class="row-form">

                            <div class="span8">
                                <span class="top">Profile List</span>
                                <select id="profileList"></select>
                            </div>
                            <div class="span2">
                                <span class="top">Unit</span>
                                <select id="UnitList"></select>
                            </div>
                        </div>
                        <div class="row-form" id="listitemDiv">
                            <div class="span8">
                                @*<span class="top">Select Item from the list (min 5 char) </span>
                                <select id="allItemsList" class="select" style="width: 100%">
                                    <option value="0">...</option>
                                </select>*@
                                <input type="text" id="allItemsList" class="js-data-example-ajax" style="width: 100%" />
                            </div>
                            <div class="span1">
                                @*<span class="top">.</span>*@
                                <input type="button" class="button" id="btnAddItem" value="Add" />
                            </div>
                            <div class="dr"><span></span></div>
                        </div>
                        <table class="table" id="SelectedItemtbl"
                            style="background-color: beige; width: 100%;">
                            <thead>
                                <tr>
                                    <th>sl.no</th>
                                    <th>Drug Name </th>
                                    <th>Qty</th>
                                    <th>Unit</th>
                                    <th class="hidden">UnitID</th>
                                    <th class="hidden">ID</th>
                                    <th class="TAC">Action</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="block-fluid">
                        <div class="row-form">
                            <div class="span12">
                                <div class="span6">
                                </div>
                                <div class="span3">
                                    <button class="btn btn-primary" id="btnSave" style="width: 75%">Save</button>
                                </div>
                                <div class="span3">
                                    <button class="btn btn-primary" id="btnClear" style="width: 75%">Clear</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        }
    </form>

</div>

