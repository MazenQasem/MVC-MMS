@using MMS2
@model  SupplierS
@{
    Layout = "~/Views/Shared/_TwitterLayoutPage.cshtml";
}


<div class="breadCrumb clearfix">
    <ul id="breadcrumbs">
        <li><a href="@Url.Content("~/")">Home</a></li>
        <li><a href="@Url.Content("~/")" onclick="$('#mainMenuDefault').trigger('click');">Main</a></li>
        <li>Supplier</li>
    </ul>
</div>


<div class="content">


    <form id="validate">

        @using (Ajax.BeginForm("Save", new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "validate" }))
        {

@*Headers*@
            <div class="row-fluid">
                <div class="span12">
                    <div class="widget">
                        <div class="head dark">
                            <div class="icon"><i class="icos-newtab"></i></div>
                            <h2>Supplier Master Data</h2>
                        </div>
                        <div class="block">
                            <div class="row-form">
                                <div class="span2">Supplier ID's  </div>
                                <div class="span6">
                                    @Html.DisplayFor(m => m.ID)
                                    @Html.HiddenFor(m => m.ID)
                                    @Html.HiddenFor(m => m.PaymentType)
                                    @Html.HiddenFor(m => m.Active)
                                </div>
                            </div>

                            <div class="row-form">
                                <div class="span2">Supplier Name  </div>
                                <div class="span6">
                                    @*@Html.TextBoxFor(m => m.Name, new {@palceholder="Name", @class="validate[required]"})*@
                                    @Html.TextBoxFor(m => m.Name, new { @class = "validate[required]" })
                                </div>

                                <div class="span1">DateTime</div>
                                <div class="span2">
                                    @*@Html.TextBoxFor(m => m.StartdateTime)*@
                                    @Html.DisplayFor(m => m.StartdateTime)
                                </div>
                            </div>
                            <div class="row-form">
                                <div class="span2">Contact Person </div>
                                <div class="span6">
                                    @Html.TextBoxFor(m => m.ContactPerson, new { @class = "validate[required]" })
                                </div>
                                <div class="span1">Grade  </div>
                                <div class="span2">
                                    @Html.TextBoxFor(m => m.Grade, new { @class = "validate[required]" })
                                </div>

                            </div>
                            <div class="row-form">
                                <div class="span2">Code  </div>
                                <div class="span6">
                                    @Html.TextBoxFor(m => m.Code, new { @class = "validate[required]" })
                                </div>
                                <div class="span1"></div>
                                <div class="span2">
                                    @Html.CheckBoxFor(m => m.OverSeas)
                                    Overseas Supplier
                                </div>

                            </div>

                            <div class="row-form">
                                <div class="span2"></div>
                                <div class="span6">
                                </div>
                                <div class="span1"></div>
                                <div class="span2">
                                    <div class="btn-group" data-toggle="buttons-radio">
                                        @if (Model.Active == false)
                                        { 
                                            <button type="button" class="btn active" onclick="SetActiveValue()">Active</button>
                                            <button type="button" class="btn " onclick="SetNonActiveValue()">Deactive</button>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn ">Active</button>
                                            <button type="button" class="btn active">Deactive</button>
                                        }
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>

@*Details*@
            <div class="row-fluid">
                <div class="span12">
                    <div class="widget">
                        <div class="head dark">
                            <div class="icon"><i class="icosg-gridview"></i></div>
                            <h2>Other Information</h2>
                        </div>

                        <div class="block-fluid tabbable tabs-left">
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#tab1" data-toggle="tab">Office Detail</a></li>
                                <li class=""><a href="#tab2" data-toggle="tab" id="PaymentTypeLI">Payment Terms</a></li>
                                <li class=""><a href="#tab3" data-toggle="tab">Supplier Items</a></li>
                                <li class=""><a href="#tab4" data-toggle="tab">Sup.Manufacturer</a></li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="tab1">
                                    <div class="row-fluid">
                                        <div class="span2">Address1  </div>
                                        <div class="span4">@Html.TextBoxFor(m => m.Address1) </div>

                                        <div class="span2">Telex  </div>
                                        <div class="span4">@Html.TextBoxFor(m => m.Telex) </div>
                                    </div>

                                    <div class="row-fluid">
                                        <div class="span2">Address2  </div>
                                        <div class="span4">@Html.TextBoxFor(m => m.Address2) </div>

                                        <div class="span2">Cell Phone  </div>
                                        <div class="span4">@Html.TextBoxFor(m => m.Cell) </div>
                                    </div>

                                    <div class="row-fluid">
                                        <div class="span2">City  </div>
                                        <div class="span4">@Html.TextBoxFor(m => m.City) </div>

                                        <div class="span2">Fax  </div>
                                        <div class="span4">@Html.TextBoxFor(m => m.Fax) </div>
                                    </div>

                                    <div class="row-fluid">
                                        <div class="span2">Country  </div>
                                        <div class="span4">@Html.TextBoxFor(m => m.Country) </div>

                                        <div class="span2">E-Mail  </div>
                                        <div class="span4">
                                            @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email", @class = "validate[required,email]" })
                                        </div>

                                    </div>

                                    <div class="row-fluid">
                                        <div class="span2">PO Box No. </div>
                                        <div class="span4">@Html.TextBoxFor(m => m.Box) </div>

                                        <div class="span2">WebSite</div>
                                        <div class="span4">@Html.TextBoxFor(m => m.web_site) </div>
                                    </div>

                                    <div class="row-fluid">
                                        <div class="span2">Office Phone1 </div>
                                        <div class="span4">@Html.TextBoxFor(m => m.Phone1, new { @class = "validate[required]" }) </div>

                                        <div class="span2">Office Phone2  </div>
                                        <div class="span4">@Html.TextBoxFor(m => m.Phone2) </div>
                                    </div>


                                </div>
                                <div class="tab-pane" id="tab2">

                                    <div class="accordion ui-accordion ui-widget ui-helper-reset" role="tablist">
                                        <h3 tabindex="0" aria-selected="true" aria-controls="ui-accordion-2-panel-0"
                                            id="ui-accordion-2-header-0" role="tab"
                                            class="ui-accordion-header ui-helper-reset ui-state-default ui-accordion-icons ui-accordion-header-active ui-state-active ui-corner-top">
                                            <span class="ui-accordion-header-icon ui-icon ui-icon-triangle-1-s"></span>Select Payment Type</h3>
                                        <div aria-hidden="false" aria-expanded="true" role="tabpanel" aria-labelledby="ui-accordion-2-header-0"
                                            id="ui-accordion-2-panel-0" style="display: block;"
                                            class="ui-accordion-content ui-helper-reset ui-widget-content ui-corner-bottom ui-accordion-content-active">

                                            <div class="btn-group" data-toggle="buttons-radio">
                                                <button id="btnCash" type="button" class="btn active" onfocus="Show()" onclick="Show() ">Cash On Delivery</button>
                                                <button id="btnPrePaid" type="button" class="btn" onfocus="Show()" onclick="Show()">PrePaid</button>
                                                <button id="btnDue" type="button" class="btn" onfocus="Show()" onclick="Show()">Due in Number of Days</button>

                                            </div>
                                        </div>

                                        <h3 tabindex="-1" aria-selected="false" aria-controls="ui-accordion-2-panel-1"
                                            id="ui-accordion-2-header-1" role="tab"
                                            class="ui-accordion-header ui-helper-reset ui-state-default ui-accordion-icons ui-corner-all">
                                            <span class="ui-accordion-header-icon ui-icon ui-icon-triangle-1-e"></span>
                                            Payment Details
                                        </h3>
                                        <div aria-hidden="true" aria-expanded="false" role="tabpanel" aria-labelledby="ui-accordion-2-header-1"
                                            id="ui-accordion-2-panel-1" style="display: none;"
                                            class="ui-accordion-content ui-helper-reset ui-widget-content ui-corner-bottom">
                                            <div id="btnCashON-dtl">
                                                <div class="row-fluid">
                                                    <div id="DueN1">
                                                        <div class="span2">Net Due In  </div>
                                                        <div class="span2">@Html.TextBoxFor(m => m.NetDueDays)</div>
                                                        <div class="span2">Days </div>
                                                    </div>
                                                    <div id="DueN2">
                                                        <div class="span2">Discount In  </div>
                                                        <div class="span2">@Html.TextBoxFor(m => m.DiscountDays) </div>
                                                        <div class="span2">Days </div>
                                                    </div>
                                                </div>
                                                <div class="row-fluid">
                                                    <div id="DueN3">
                                                        <div id="DiscountTitle" class="span2">Discount %  </div>
                                                        <div id="PrePaidTitle" class="span2">PrePaid %  </div>
                                                        <div class="span2">@Html.TextBoxFor(m => m.Percentage) </div>
                                                        <div class="span2"></div>
                                                    </div>
                                                    <div id="DueN4">
                                                        <div class="span2">Credit Limit  </div>
                                                        <div class="span2">@Html.TextBoxFor(m => m.CreditLimit) </div>
                                                        <div class="span2">Amount </div>
                                                    </div>
                                                </div>
                                                <div class="row-fluid">
                                                    <div class="span2">Bank  </div>
                                                    <div class="span4">
                                                        @*@Html.DropDownList("BankList", new SelectList(Model.BankList, "ID", "Name", Model.BankID), new { id="BankList" })*@
                                                        @Html.DropDownListFor(r => r.BankID, new SelectList(Model.BankList, "ID", "NAME", Model.BankID))

                                                    </div>
                                                    <div class="span4"></div>
                                                </div>
                                                <div class="row-fluid">
                                                    <div class="span2">Account no# </div>
                                                    <div class="span4">@Html.TextBoxFor(m => m.AccountNo) </div>
                                                </div>
                                            </div>

                                        </div>

                                    </div>

                                </div>
                                <div class="tab-pane" id="tab3">
                                    <div class="row-fluid">
                                        <div class="span6">
                                            * All Items (search By 4 Char)
                                                                                        <div class="span5">@Html.TextBox("txtSearch")</div>
                                        </div>
                                        <div class="span4">
                                            * Selected Items
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span5">

                                            @*@Html.ListBox("ItemList", new SelectList(Model.ItemList, "ID", "name", Model.ItemlistID), new { id = "ItemList" })*@
                                            @Html.ListBox("ItemList", new SelectList(Model.ItemList, "ID", "name", Model.ItemlistID), new { id = "ItemList" })

                                        </div>
                                        <div class="span1">
                                            @*<div class="row-fluid"> <div class="span1"> <input id="btnAddAll" type="button" value=" >> " onclick="addallItems();" style="width:60px" /> </div></div>*@
                                            <div class="row-fluid">
                                                <div class="span1">
                                                    <input id="btnAdd" type="button" value=" > " onclick="addItem();" style="width: 60px" />
                                                </div>
                                            </div>
                                            <div class="row-fluid">
                                                <div class="span1">
                                                    <input id="btnRemove" type="button" value=" < " onclick="removeItem();" style="width: 60px" />
                                                </div>
                                            </div>
                                            <div class="row-fluid">
                                                <div class="span1">
                                                    <input id="btnRemoveAll" type="button" value=" << " onclick="removeallItems();" style="width: 60px" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span5">
                                            @if (Model.ID != 0 && Model.SelectedSupplierItems.Count > 0)
                                            {  
                                                @Html.ListBoxFor(m => m.SelectedSupplierItems,
                                                new SelectList(Model.SelectedSupplierItems, "ItemId", "Itemname", Model.SelectedItemsID),
                                                new { @id = "SelectedSupplierItems" })
                                            }
                                            else
                                            { @Html.ListBox("SelectedSupplierItems", Enumerable.Empty<SelectListItem>(), new { id = "SelectedSupplierItems" }) }

                                            @*@Html.ListBox("SelectedSupplierItems2",
                                                new SelectList(Model.SelectedSupplierItems, "ItemId", "Itemname", Model.SelectedItemsID),
                                                new { @id = "SelectedItemList2", MultiSelectList = true })*@
                                        </div>
                                    </div>



                                </div>
                                <div class="tab-pane" id="tab4">
                                    <div class="row-fluid">
                                        <div class="span6">
                                            * All Manufacturer
                                        </div>
                                        <div class="span4">
                                            * Selected Manufacturer
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span5">
                                            @Html.ListBox("ManufacturerList",
                                            new SelectList(Model.ManufacturerList, "ID", "name", Model.ManufacturerID), new { id = "ManufList" })

                                        </div>
                                        <div class="span1">
                                            @*<div class="row-fluid"> <div class="span1"> <input id="btnAddAll" type="button" value=" >> " onclick="addallMans();" style="width:60px" /> </div></div>*@
                                            <div class="row-fluid">
                                                <div class="span1">
                                                    <input type="button" value=" > " onclick="addMan();" style="width: 60px" />
                                                </div>
                                            </div>
                                            <div class="row-fluid">
                                                <div class="span1">
                                                    <input type="button" value=" < " onclick="removeMan();" style="width: 60px" />
                                                </div>
                                            </div>
                                            <div class="row-fluid">
                                                <div class="span1">
                                                    <input type="button" value=" << " onclick="removeallMans();" style="width: 60px" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span5">

                                            @*@Html.ListBox("SelectedSupplierManuf",
                                        new SelectList(Model.SelectedManufacturer, "Manufacturerid", "name", Model.SelectedSupManID),
                                        new { id = "SelectedManufList", MultiSelectList = true })*@

                                            @if (Model.ID != 0 && Model.SelectedManufacturer.Count > 0)
                                            {
                                                @Html.ListBoxFor(m => m.SelectedManufacturer,
                                                new SelectList(Model.SelectedManufacturer, "Manufacturerid", "name", Model.SelectedSupManID),
                                                new { id = "SelectedManufacturer", MultiSelectList = true })
                                            }
                                            else
                                            { 
                                                @Html.ListBox("SelectedManufacturer", Enumerable.Empty<SelectListItem>(), new { id = "SelectedManufacturer" })
                                            }
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>



            </div>

@*Commands*@
            <div class="row-fluid">
                <div class="span12">

                    <div class="block">
                        <div class="row-form">
                            <input type="submit" name="BtnSave" id="BtnSave" class="btn btn-primary" value="Save" style="width: 90px; font-size: larger;" />
                            @if (Model.ID > 0)
                            {
                                <input type="submit" name="BtnDelete" id="BtnDelete" class="btn btn-primary" value="Delete" style="width: 90px; font-size: larger;" />
                            }

                            <input type="submit" name="BtnClear" id="BtnClear" class="btn btn-primary" value="Clear" style="width: 90px; font-size: larger;" />
                            <input type="submit" name="BtnClose" id="BtnClose" class="btn btn-primary" value="Close" style="width: 90px; font-size: larger;" />
                        </div>
                    </div>

                </div>
            </div>
        
        }
    </form>
    @*html.BeginForm END  *@

    @*for showing the error  msg if any*@
    @if (string.IsNullOrEmpty(Model.SupplierErr) == false)
    {
        <div id="ShowDiv">
            <a href="#fModal" id="ShowPartial" role="button" class="btn" data-toggle="modal">Show</a>
        </div>
        @Html.Partial("show")
    }
</div>
@*class content end#*@



<script type='text/javascript' src="@Url.Content("~/Scripts/Suppliers.js")"></script>

